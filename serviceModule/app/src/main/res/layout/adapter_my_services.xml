<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/White"
        android:padding="@dimen/_5sdp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@+id/checkCB"
            app:layout_constraintEnd_toStartOf="@+id/amountTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkCB" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amountTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@+id/checkCB"
            app:layout_constraintEnd_toStartOf="@+id/checkCB"
            app:layout_constraintTop_toTopOf="@+id/checkCB" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>