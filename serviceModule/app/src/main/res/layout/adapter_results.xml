<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/addRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/White"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userIV"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@mipmap/ic_picc" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/nextIV"
            android:layout_toEndOf="@+id/userIV"
            android:text="Maria Nikolaou" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ratingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/userIV"
            android:drawableStart="@drawable/ic_star"
            android:text="4.5"
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/nextIV"
            android:layout_toEndOf="@+id/ratingTV"
            android:text="\u25CF Basic English, Native Italian"
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nextIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="$7.4/hr"
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/nextIV"
            android:layout_toEndOf="@+id/userIV"
            android:drawableStart="@drawable/ic_star"
            android:text="Has a car"
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/availableTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/userIV"
            android:padding="@dimen/_3sdp"
            android:text="Available at: "
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeOneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/availableTV"
            android:background="@color/LightGrey"
            android:padding="@dimen/_3sdp"
            android:text="9am-9pm"
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeTwoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTV"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/timeOneTV"
            android:background="@color/green_select"
            android:padding="@dimen/_3sdp"
            android:text="11am-3pm"
            android:textColor="@color/sub_sentence_color" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/serviceOneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/availableTV"
            android:layout_marginVertical="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/userIV"
            android:background="@drawable/white_button"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:text="Detailed Cleaning"
            android:textColor="@color/light_blue"
            tools:targetApi="lollipop" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/serviceTwoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/availableTV"
            android:layout_marginVertical="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/serviceOneTV"
            android:background="@drawable/white_button"
            android:elevation="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:text="Fast!"
            android:textColor="@color/light_blue"
            tools:targetApi="lollipop" />

    </RelativeLayout>


</layout>